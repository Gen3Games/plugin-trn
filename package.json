{
  "name": "plugin-trn",
  "version": "1.0.0",
  "description": "ElizaOS plugin for The Root Network",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": {
        "@elizaos/source": "./src/index.ts",
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "@elizaos/source": "./src/index.ts",
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    }
  },
  "dependencies": {
    "@polkadot/api": "^10.9.1",
    "ethers": "6.13.2",
    "@therootnetwork/api": "^1.0.9",
    "@futureverse/transact": "^0.5.1"
  },
  "devDependencies": {
    "tsup": "^8.4.0",
    "typescript": "^5.8.3"
  },
  "scripts": {
    "build": "tsup --format esm --dts",
    "dev": "tsup --format esm --dts --watch"
  },
  "publishConfig": {
    "access": "public"
  },
  "agentConfig": {
    "pluginType": "elizaos:client:1.0.0",
    "pluginParameters": {
      "TRN_PRIVATE_KEY": {
        "type": "string",
        "minLength": 1,
        "description": "Your private key for the TRN chain ecosystem. Grants full access to associated funds.",
        "optional": true
      },
      "TRN_PUBLIC_KEY": {
        "type": "string",
        "minLength": 1,
        "description": "Your public key for the TRN chain ecosystem.",
        "optional": true
      },
      "PUBLIC_NETWORK_SET": {
        "type": "string",
        "minLength": 1,
        "description": "Network either as mainnet or tesnet.",
        "optional": true
      }
    }
  }
}
